<VirtualHost *:80>
  ServerName <%= node['yukon']['hostname'] %>
  ServerAdmin 'pre@ciklum.com'

  DocumentRoot <%= node['yukon']['document_root'] %>
  <Directory />
          Options FollowSymLinks
          AllowOverride None
  </Directory>
  <Directory <%= node['yukon']['document_root'] %> >
          Options Indexes FollowSymLinks MultiViews
          AllowOverride None
          Order allow,deny
          allow from all
  </Directory>

  ErrorLog /var/log/apache2/error.log

  LogLevel warn

  CustomLog /var/log/apache2/access.log combined
  DirectoryIndex index.php index.html
</VirtualHost>